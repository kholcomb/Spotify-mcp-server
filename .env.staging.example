# Staging Environment Configuration
# Copy this file to .env.staging for staging deployments

# Environment - staging for intermediate security validation
NODE_ENV=staging

# Spotify App Credentials - Use STAGING app credentials
SPOTIFY_CLIENT_ID=your_staging_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_staging_spotify_client_secret

# Redirect URI - HTTPS recommended for staging
SPOTIFY_REDIRECT_URI=https://staging.yourdomain.com/callback

# Security: Allowed domains for redirect URI validation
SPOTIFY_ALLOWED_DOMAINS=staging.yourdomain.com,staging-api.yourdomain.com

# Logging Configuration - more verbose for staging
LOG_LEVEL=debug

# Server Configuration
MCP_SERVER_PORT=3000
CALLBACK_PORT=8080

# Security Configuration - less strict than production
REQUIRE_HARDWARE_HSM=false

# Optional: Storage Configuration
# STORAGE_BASE_DIR=/var/lib/spotify-mcp-staging