# Production Environment Configuration
# Copy this file to .env.production for production deployments

# Environment - CRITICAL: Must be 'production' for security enforcement
NODE_ENV=production

# Spotify App Credentials - Use PRODUCTION app credentials
SPOTIFY_CLIENT_ID=your_production_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_production_spotify_client_secret

# Redirect URI - MUST be HTTPS in production
# This MUST exactly match your Spotify Dashboard configuration
SPOTIFY_REDIRECT_URI=https://yourdomain.com/callback

# Security: Allowed domains for redirect URI validation
# Only include domains you own and control
SPOTIFY_ALLOWED_DOMAINS=yourdomain.com,api.yourdomain.com

# Logging Configuration  
LOG_LEVEL=warn

# Server Configuration
MCP_SERVER_PORT=3000
CALLBACK_PORT=8080

# Security Configuration
REQUIRE_HARDWARE_HSM=true

# SSL/TLS Configuration (if using direct HTTPS)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem

# Optional: Database/Storage Configuration
# STORAGE_ENCRYPTION_ENABLED=true
# STORAGE_BASE_DIR=/var/lib/spotify-mcp

# Optional: Monitoring and Observability
# ENABLE_METRICS=true
# METRICS_PORT=9090
# SENTRY_DSN=your_sentry_dsn_here