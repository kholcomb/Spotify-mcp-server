{
  "name": "spotify-mcp-server",
  "version": "1.0.1",
  "description": "A Model Context Protocol server for Spotify Web API integration",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "setup": "node setup.js",
    "create-release": "node create-release.js",
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "test-connection": "node test-connection.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='tests/unit'",
    "test:integration": "jest --testPathPattern='tests/integration'",
    "test:ci": "jest --coverage --ci --watchAll=false --testResultsProcessor=jest-junit",
    "test:coverage:open": "npm run test:coverage && open coverage/lcov-report/index.html",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "clean": "rm -rf build coverage",
    "build:fast": "npm run clean && npx tsc",
    "build:production": "npm run clean && npm run lint && npm run typecheck && tsc",
    "prebuild": "npm run clean && npm run lint && npm run typecheck",
    "postbuild": "echo 'âœ… Build complete!'",
    "ci": "npm run prebuild && npm run build && npm run test:ci",
    "security": "npm audit && npm run test:coverage",
    "validate:gitignore": "./scripts/validate-gitignore.sh",
    "precommit": "npm run lint && npm run validate:gitignore",
    "security:check": "npm audit && npm run validate:gitignore"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "spotify",
    "ai",
    "music",
    "api"
  ],
  "author": "Multi-Persona Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "open": "^10.1.2",
    "zod": "^3.22.0",
    "dompurify": "^3.2.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "jest": "^30.0.3",
    "jest-environment-node": "^30.0.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
